        "low_mape" : 2,
        "low_median_diff" : 1,
        "low_1sig_width" : 0,
        "low_1sig_calibr_width" : 0,
    },
    "XGB_structures" : {
        "full_mape" : 4,
        "medium_mape" : 4,
        "full_median_diff" : 0,
        "full_1sig_width" : 0,
